@using hris.Models;

@{
    ViewBag.Title = "Employee - Edit";
}

<div class="page-header page-header-light">
    <div class="page-header-content header-elements-md-inline">
        <div class="page-title d-flex">
            <h4><span class="font-weight-semibold">Detail Karyawan</span></h4>
            <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
        </div>
    </div>

    <div class="breadcrumb-line breadcrumb-line-light header-elements-md-inline">
        <div class="d-flex">
            <div class="breadcrumb">
                <a href="#" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> Home</a>
                <a href="@Url.Action("List")" class="breadcrumb-item">Karyawan</a>
                <span class="breadcrumb-item active">Edit Karyawan</span>
            </div>

            <a href="#" class="header-elements-toggle text-default d-md-none"><i class="icon-more"></i></a>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    foreach (karyawan karyawan in ViewBag.Karyawan)
    {
        <div class="content">
            <div class="card">
                <div class="card-body">
                    <form class="form-horizontal m-t-30" action="@Url.Action("Edit", "Employee")" method="post">
                        @Html.AntiForgeryToken()
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="no_absen">No Absen</label>
                                        @Html.TextBoxFor(m => karyawan.NOABSEN, new { @class = "form-control form-control-sm", Name = "NOABSEN", @readonly = "readonly" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="karyawan_id">No Karyawan</label>
                                        @Html.TextBoxFor(m => karyawan.KARYAWAN_ID, new { @class = "form-control form-control-sm", Name = "KARYAWAN_ID" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="nama_lengkap">Nama Lengkap</label>
                                        @Html.TextBoxFor(m => karyawan.NAMA_LENGKAP, new { @class = "form-control form-control-sm", Name = "NAMA_LENGKAP" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="inisial">Inisial</label>
                                        @Html.TextBoxFor(m => karyawan.INISIAL, new { @class = "form-control form-control-sm", Name = "INISIAL" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="no_kk">No Kartu Keluarga</label>
                                        @Html.TextBoxFor(m => karyawan.KARTU_KELUARGA, new { @class = "form-control form-control-sm form-control form-control-sm-sm", Name = "KARTU_KELUARGA" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="no_ktp">No KTP</label>
                                        @Html.TextBoxFor(m => karyawan.KTP, new { @class = "form-control form-control-sm form-control form-control-sm-sm", Name = "KTP" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="no_npwp">No NPWP</label>
                                        @Html.TextBoxFor(m => karyawan.NPWP, new { @class = "form-control form-control-sm form-control form-control-sm-sm", Name = "NPWP" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="tempat_lahir">Tempat Lahir</label>
                                        @Html.TextBoxFor(m => karyawan.TEMPAT_LAHIR, new { @class = "form-control form-control-sm", Name = "TEMPAT_LAHIR" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="tgl_lahir">Tanggal Lahir</label>
                                        <div class="input-group date">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="icon-calendar"></i></span>
                                            </div>
                                            @Html.TextBoxFor(m => karyawan.TGL_LAHIR, new { @class = "form-control form-control-sm", Name = "TGL_LAHIR" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="usia">Usia</label>
                                        @Html.TextBoxFor(m => karyawan.USIA, new { @class = "form-control form-control-sm", Name = "USIA" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group">
                                        <label for="kel_usia">Kelompok Usia</label>
                                        <select class="form-control form-control-sm select2" name="kelompok_usia">
                                            <option value="-1">Pilih</option>
                                            <option value="1" @(karyawan.KELOMPOK_USIA == "21-25 Years" ? "selected" : "")>21-25 Years</option>
                                            <option value="2" @(karyawan.KELOMPOK_USIA == "26-30 Years" ? "selected" : "")>26-30 Years</option>
                                            <option value="3" @(karyawan.KELOMPOK_USIA == "31-35 Years" ? "selected" : "")>31-35 Years</option>
                                            <option value="4" @(karyawan.KELOMPOK_USIA == "36-40 Years" ? "selected" : "")>36-40 Years</option>
                                            <option value="5" @(karyawan.KELOMPOK_USIA == "41-45 Years" ? "selected" : "")>41-45 Years</option>
                                            <option value="6" @(karyawan.KELOMPOK_USIA == "46-50 Years" ? "selected" : "")>46-50 Years</option>
                                            <option value="7" @(karyawan.KELOMPOK_USIA == "51-55 Years" ? "selected" : "")>51-55 Years</option>
                                            <option value="8" @(karyawan.KELOMPOK_USIA == ">56 Years" ? "selected" : "")>56 Years<</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="jns_kelamin">Jenis Kelamin</label>
                                        <div class="form-group">
                                            <div class="form-check form-check-inline">
                                                <div class="custom-control custom-radio">
                                                    @if (karyawan.JENIS_KELAMIN == "Laki-laki")
                                                    {
                                                        @Html.RadioButtonFor(model => karyawan.JENIS_KELAMIN, "Laki-laki", new { id = "jns_kelamin1", Name = "JENIS_KELAMIN", @class = "custom-control-input", @Checked = "checked" })
                                                    }
                                                    else
                                                    {
                                                        @Html.RadioButtonFor(model => karyawan.JENIS_KELAMIN, "Laki-laki", new { id = "jns_kelamin1", Name = "JENIS_KELAMIN", @class = "custom-control-input" })
                                                    }
                                                    <label class="custom-control-label" for="jns_kelamin1">Laki-laki</label>
                                                </div>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <div class="custom-control custom-radio">
                                                    @if (karyawan.JENIS_KELAMIN == "Perempuan")
                                                    {
                                                        @Html.RadioButtonFor(model => karyawan.JENIS_KELAMIN, "Perempuan", new { id = "jns_kelamin2", Name = "JENIS_KELAMIN", @class = "custom-control-input", @Checked = "checked" })
                                                    }
                                                    else
                                                    {
                                                        @Html.RadioButtonFor(model => karyawan.JENIS_KELAMIN, "Perempuan", new { id = "jns_kelamin2", Name = "JENIS_KELAMIN", @class = "custom-control-input" })
                                                    }
                                                    <label class="custom-control-label" for="jns_kelamin2">Perempuan</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="agama">Agama</label>
                                        @Html.DropDownList("AGAMA", new SelectList(ViewBag.Agama, "Text", "Value", karyawan.AGAMA), new { @class = "form-control form-control-sm select2" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="alamat">Alamat</label>
                                        @Html.TextAreaFor(m => karyawan.ALAMAT, new { @class = "form-control form-control-sm", @rows = "3", Name = "ALAMAT" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group pt-2">
                                        <label class="d-block">Status Perkawinan</label>
                                        <div class="custom-control custom-radio">
                                            @if (karyawan.STATUS == "Menikah")
                                            {
                                                @Html.RadioButtonFor(model => karyawan.JENIS_KELAMIN, "Menikah", new { id = "status_perkawinan1", Name = "STATUS", @class = "custom-control-input", @Checked = "checked" })
                                            }
                                            else
                                            {
                                                @Html.RadioButtonFor(model => karyawan.JENIS_KELAMIN, "Menikah", new { id = "status_perkawinan1", Name = "STATUS", @class = "custom-control-input" })
                                            }
                                            <label class="custom-control-label" for="status_perkawinan1">Menikah</label>
                                        </div>

                                        <div class="custom-control custom-radio">
                                            @if (karyawan.STATUS == "Belum Menikah")
                                            {
                                                @Html.RadioButtonFor(model => karyawan.JENIS_KELAMIN, "Belum Menikah", new { id = "status_perkawinan2", Name = "STATUS", @class = "custom-control-input", @Checked = "checked" })
                                            }
                                            else
                                            {
                                                @Html.RadioButtonFor(model => karyawan.JENIS_KELAMIN, "Belum Menikah", new { id = "status_perkawinan2", Name = "STATUS", @class = "custom-control-input" })
                                            }
                                            <label class="custom-control-label" for="status_perkawinan2">Belum Menikah</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="telp_rumah">No Telp Rumah</label>
                                        @Html.TextBoxFor(m => karyawan.TELP_RUMAH, new { @class = "form-control form-control-sm", Name = "TELP_RUMAH" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="hp">No Hp</label>
                                        @Html.TextBoxFor(m => karyawan.HP, new { @class = "form-control form-control-sm", Name = "HP" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="tgl_masuk_kerja">Masuk Kerja</label>
                                        <div class="input-group date">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="icon-calendar"></i></span>
                                            </div>
                                            @Html.TextBoxFor(m => karyawan.TANGGAL_MASUK, new { @class = "form-control form-control-sm", Name = "TANGGAL_MASUK" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="tgl_berhenti_kerja">Berhenti Kerja</label>
                                        <div class="input-group date">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="icon-calendar"></i></span>
                                            </div>
                                            @Html.TextBoxFor(m => karyawan.TANGGAL_BERHENTI, new { @class = "form-control form-control-sm", Name = "TANGGAL_B" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group">
                                        <label for="alasan_berhenti">Alasan Berhenti</label>
                                        @Html.TextAreaFor(m => karyawan.ALASAN_BERHENTI, new { @class = "form-control form-control-sm", @rows = "3", Name = "ALASAN_BERHENTI" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group">
                                        <label for="pend_terakhir">Pendidikan Terakhir</label>
                                        @Html.TextBoxFor(m => karyawan.PEND_TERAKHIR, new { @class = "form-control form-control-sm", Name = "PEND_TERAKHIR" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="perg_tinggi">Nama Perguruan Tinggi</label>
                                        @Html.TextBoxFor(m => karyawan.NAMA_SEKOLAH, new { @class = "form-control form-control-sm", Name = "NAMA_SEKOLAH" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="jurusan">Jurusan / Fakultas</label>
                                        @Html.TextBoxFor(m => karyawan.JURUSAN, new { @class = "form-control form-control-sm", Name = "JURUSAN" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="status_pegawai">Status Kepegawaian</label>
                                        @Html.TextBoxFor(m => karyawan.ELNUSA_STATUS, new { @class = "form-control form-control-sm", Name = "ELNUSA_STATUS" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="lvl_jabatan">Level Jabatan</label>
                                        @Html.DropDownList("lvljabatan", new SelectList(ViewBag.LvlJabatan, "Text", "Value"), new { @class = "form-control form-control-sm select2" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="divisi">Divisi</label>
                                        @Html.DropDownList("DIVISI", new SelectList(ViewBag.Divisi, "Text", "Value", karyawan.DIVISI), new { @class = "form-control form-control-sm select2" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="jabatan">Jabatan</label>
                                        @Html.TextBoxFor(m => karyawan.JABATAN, new { @class = "form-control form-control-sm", Name = "JABATAN" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="gol_jabatan">Golongan Jabatan</label>
                                        @Html.DropDownList("GOLONGAN", new SelectList(ViewBag.GolJabatan, "Text", "Value", karyawan.GOLONGAN), new { @class = "form-control form-control-sm select2" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="gol_bisnis">Golongan Bisnis</label>
                                        @Html.DropDownList("GOLONGAN_BISNIS", new SelectList(ViewBag.GolBisnis, "Text", "Value", karyawan.GOLONGAN_BISNIS), new { @class = "form-control form-control-sm select2" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="masuk_kerja">Masa Kerja</label>
                                        @Html.TextBoxFor(m => karyawan.MASA_KERJA, new { @class = "form-control form-control-sm", Name = "MASA_KERJA" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="status_pegawai">Status Pegawai</label>
                                        @Html.DropDownList("STATUS", new SelectList(ViewBag.StatusPegawai, "Text", "Value", karyawan.STATUS), new { @class = "form-control form-control-sm select2" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group">
                                        <label for="status_kerja">Status Kerja</label>
                                        <div class="form-group">
                                            <div class="form-check form-check-inline">
                                                <div class="custom-control custom-radio">
                                                    @if (karyawan.STATUS_KERJA == "Aktif")
                                                    {
                                                        @Html.RadioButtonFor(model => karyawan.STATUS_KERJA, "Aktif", new { id = "status_kerja1", Name = "STATUS", @class = "custom-control-input", @Checked = "checked" })
                                                    }
                                                    else
                                                    {
                                                        @Html.RadioButtonFor(model => karyawan.STATUS_KERJA, "Aktif", new { id = "status_kerja1", Name = "STATUS", @class = "custom-control-input" })
                                                    }
                                                    <label class="custom-control-label" for="status_kerja1">Aktif</label>
                                                </div>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <div class="custom-control custom-radio">
                                                    @if (karyawan.STATUS_KERJA == "Non Aktif")
                                                    {
                                                        @Html.RadioButtonFor(model => karyawan.STATUS_KERJA, "Non Aktif", new { id = "status_kerja2", Name = "STATUS", @class = "custom-control-input", @Checked = "checked" })
                                                    }
                                                    else
                                                    {
                                                        @Html.RadioButtonFor(model => karyawan.STATUS_KERJA, "Non Aktif", new { id = "status_kerja2", Name = "STATUS", @class = "custom-control-input" })
                                                    }
                                                    <label class="custom-control-label" for="status_kerja2">Non Aktif</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="lokasi_kerja">Lokasi Kerja</label>
                                        @Html.DropDownList("LOKASI_KERJA", new SelectList(ViewBag.LokasiKerja, "Text", "Value", karyawan.LOKASI_KERJA), new { @class = "form-control form-control-sm select2" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="keterangan">Keterangan</label>
                                        @Html.TextAreaFor(m => karyawan.KETERANGAN, new { @class = "form-control form-control-sm", @rows = "3", Name = "KETERANGAN" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="no_rek_mandiri">No Rekening Mandiri</label>
                                        @Html.TextBoxFor(m => karyawan.NOMOR_REKENING, new { @class = "form-control form-control-sm", Name = "NOMOR_REKENING" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="no_rek_bni">No Rekening BNI</label>
                                        @Html.TextBoxFor(m => karyawan.NOMOR_REKENING_BNI, new { @class = "form-control form-control-sm", Name = "NOMOR_REKENING_BNI" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="job_grade">Job Grade</label>
                                        @Html.TextBoxFor(m => karyawan.JOBGRADE, new { @class = "form-control form-control-sm", Name = "JOBGRADE" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="departemen">Departemen</label>
                                        @Html.TextBoxFor(m => karyawan.ELNUSA_DEPARTMENT, new { @class = "form-control form-control-sm", Name = "ELNUSA_DEPARTMENT" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="status">Status</label>
                                        @Html.DropDownList("STATUS_KARYAWAN", new SelectList(ViewBag.StatusPegawai, "Text", "Value", karyawan.STATUS_KARYAWAN), new { @class = "form-control form-control-sm select2" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="tech_talent">Tech Talent</label>
                                        @Html.TextBoxFor(m => karyawan.TECHNICAL_TALENT, new { @class = "form-control form-control-sm", Name = "TECHNICAL_TALENT" })
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-6">
                                    <div class="form-group ">
                                        <label for="status_team">Status Team</label>
                                        @Html.TextBoxFor(m => karyawan.STATUS_TEAM, new { @class = "form-control form-control-sm", Name = "STATUS_TEAM" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="text-right">
                            <button type="submit" class="btn btn-primary">Save <i class="icon-paperplane ml-2"></i></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
}
