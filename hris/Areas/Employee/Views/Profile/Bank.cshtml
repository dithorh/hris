@model hris.Models.karyawan

<div class="card border-dark">
    <div class="card-header bg-slate header-elements-inline bg-slate-700">
        <h5 class="card-title"><i class="icon-wallet mr-2"></i>Data Bank</h5>
        <div class="header-elements">
            <div class="list-icons">
                <a class="list-icons-item" data-action="collapse"></a>
                <a class="list-icons-item" data-action="reload"></a>
                <a class="list-icons-item" data-action="remove"></a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <fieldset>
            <legend>Bank Mandiri</legend>
            <div class="table-responsive">
                <table class="table">
                    <tbody>
                        <tr>
                            <td class="font-weight-semibold">No Rekening</td>
                            <td>@(Model.no_rek)</td>
                        </tr>
                        <tr>
                            <td class="font-weight-semibold">Nama Rekening</td>
                            <td>@(Model.nama_karyawan)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </fieldset>
        <fieldset>
            <legend>Bank BNI</legend>
            <div class="table-responsive">
                <table class="table">
                    <tbody>
                        <tr>
                            <td class="font-weight-semibold">No Rekening</td>
                            <td>@(Model.no_rek_bni)</td>
                        </tr>
                        <tr>
                            <td class="font-weight-semibold">Nama Rekening</td>
                            <td>@(Model.nama_karyawan)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </fieldset>
    </div>
</div>
