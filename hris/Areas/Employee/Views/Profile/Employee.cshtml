@model IEnumerable<hris.ViewModels.EmployeeDetailViewModel>

<div class="card border-dark">
    <div class="card-header bg-slate header-elements-inline bg-slate-700">
        <h5 class="card-title"><i class="icon-briefcase mr-2"></i>Data Karyawan</h5>
        <div class="header-elements">
            <div class="list-icons">
                <a class="list-icons-item" data-action="collapse"></a>
                <a class="list-icons-item" data-action="reload"></a>
                <a class="list-icons-item" data-action="remove"></a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="font-weight-semibold">No Karyawan</td>
                            <td>@(item.no_karyawan)</td>
                        </tr>
                        <tr>
                            <td class="font-weight-semibold">Inisial</td>
                            <td>@(item.inisial)</td>
                        </tr>
                        <tr>
                            <td class="font-weight-semibold">Tanggal Masuk</td>
                            <td>@(item.tgl_masuk)</td>
                        </tr>
                        <tr>
                            <td class="font-weight-semibold">Divisi</td>
                            <td>@(item.divisi)</td>

                        </tr>
                        <tr>
                            <td class="font-weight-semibold">Job Title</td>
                            <td>@(item.job_title)</td>
                        </tr>
                        <tr>
                            <td class="font-weight-semibold">Status Karyawan</td>
                            <td>@(item.status_karyawan)</td>
                        </tr>
                        <tr>
                            <td class="font-weight-semibold">Lokasi Kerja</td>
                            <td>@(item.lokasi_kerja)</td>
                        </tr>
                        <tr>
                            <td class="font-weight-semibold">Status</td>
                            <td>@(item.status_kerja)</td>
                        </tr>
                        <tr>
                            <td class="font-weight-semibold">Keterangan</td>
                            <td>@(item.keterangan)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
